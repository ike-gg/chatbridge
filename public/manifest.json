{
	"name": "ChatBridge",
	"description": "ChatBridge - Link chats between Twitch and Kick",
	"version": "1.0.2",
	"manifest_version": 3,
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png",
		"256": "icons/256.png"
	},
	"action": {
		"default_title": "ChatBridge",
		"default_popup": "popup/index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["tabs", "storage"],
	"content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*", "*://*.kick.com/*"],
			"js": ["contentScript.js"],
			"all_frames": true
		},
		{
			"matches": ["*://*.twitch.tv/*", "*://*.kick.com/*"],
			"js": ["websocket.js"],
			"world": "MAIN",
			"run_at": "document_start",
			"all_frames": true
		}
	]
}
